<h2> Do you want to send with the following content?</h2>

<%= form_with(model: @post, local: true, url: posts_path) do |form| %>

  <div class="form-group">
    <%= form.hidden_field :content %> <br>
    <p>Content : <%= @post.content %> </p>
  </div>

  <div class="form-group">
    <button class="btn btn-success" type="submit"><%= form.submit "Confirm" %></button>
    <button class="btn btn-success" type="submit"><%= form.submit "Annuler", name: 'back' %></button>
  </div>
<% end %>

