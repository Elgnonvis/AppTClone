<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class = "table">
  <thead>
    <tr>
      <th>Content</th>
      <th>Actions</th>
      <th>Actions</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td>
          <a href = "<%= post_path(post.id)%>" class="btn btn-primary">Show</a>
        </td>
        <td>
          <a href = "<%= edit_post_path(post.id)%>" class="btn btn-primary" data-confirm="Are you sure to edit this post?">Edit</a>
        </td>
        <td>
          <a href = "<%= post_path(post.id)%>" class="btn btn-danger" data-confirm="Are you sure to delate this post?" data-method="DELETE">Destroy</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<p>
<a href = "<%= new_post_path %>" class="btn btn-success"> Add New Post</a>
</p>



